{% extends 'base.html.twig' %}

{% block body %}
    <h1>Employee</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ employee.name }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ employee.age }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ employee.sex }}</td>
            </tr>
            <tr>
                <th>Education</th>
                <td>{{ employee.education }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ employee.photo }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ employee.file }}</td>
            </tr>
            <tr>
                <th>Categoryid</th>
                <td>{{ employee.categoryid }}</td>
            </tr>
            <tr>
                <th>Createtime</th>
                <td>{{ employee.createtime }}</td>
            </tr>
            <tr>
                <th>Updatetime</th>
                <td>{{ employee.updatetime }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('nlc_employee_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('nlc_employee_edit', { 'id': employee.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
